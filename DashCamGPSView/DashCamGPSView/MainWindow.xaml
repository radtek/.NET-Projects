<Window x:Class="DashCamGPSView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DashCamGPSView"
        mc:Ignorable="d"
        Loaded="Window_Loaded" Closed="Window_Closed"
        WindowStartupLocation="Manual"
        Left="10" Top="10"
        Title="DashCam GPS Viewer" Height="750" Width="1600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Grid.Row="0" BorderThickness="5" BorderBrush="YellowGreen">
            <local:VideoPlayer/>
        </Border>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch"/>
        <Border Grid.Column="2" Grid.Row="0" BorderThickness="5" BorderBrush="Gray">
            <local:VideoPlayer />
        </Border>
        <GridSplitter Grid.Column="3" HorizontalAlignment="Stretch"/>
        <Border Grid.Column="4" Grid.Row="0" BorderThickness="5" BorderBrush="LightPink">
            <local:Map  x:Name="MainMap" Zoom="13" MaxZoom="24" MinZoom="1" />
        </Border>
    </Grid>
</Window>
