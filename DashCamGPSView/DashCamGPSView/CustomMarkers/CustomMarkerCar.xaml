<UserControl x:Class="DashCamGPSView.CustomMarkers.CustomMarkerCar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DashCamGPSView.CustomMarkers"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="200"
             Opacity="0.7">
    <Canvas>
        <Image Name="_car" Source="/Images/CompassCarRed.png" 
               Canvas.Left="100" Canvas.Top="100"
               Height="40" Width="40" >
            <Image.LayoutTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <RotateTransform x:Name="arrowDirection" Angle="-45" />
                </TransformGroup>
            </Image.LayoutTransform>
        </Image>
    </Canvas>
</UserControl>
