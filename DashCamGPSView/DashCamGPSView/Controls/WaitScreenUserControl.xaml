<UserControl x:Class="DashCamGPSView.Controls.WaitScreenUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DashCamGPSView.Controls"
             xmlns:gif="clr-namespace:WpfAnimatedGif"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Margin="10" BorderThickness="3" BorderBrush="Black" Background="LightGray" Opacity="0.8">
            <Border Margin="10" Opacity="0.5">
                <Image Stretch="None" 
                       gif:ImageBehavior.AnimationCompleted="Image_AnimationCompleted"
                       gif:ImageBehavior.AnimateInDesignMode="True"
                       gif:ImageBehavior.RepeatBehavior="15x"
                       gif:ImageBehavior.AnimatedSource="/Images/CatAni.gif"/>
            </Border>
        </Border>
    </Grid>
</UserControl>
