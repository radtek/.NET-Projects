<Window x:Class="DesktopManagerUX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopManagerUX"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        MinWidth="800" MinHeight="600"
        Closed="Window_Closed"
        Title="Desktop Manager" Width="1920" Height="1080">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Margin="6">
            <ComboBox Width="200" SelectedIndex="1">
                <ComboBoxItem>2x1</ComboBoxItem>
                <ComboBoxItem>2x2</ComboBoxItem>
                <ComboBoxItem>2x3</ComboBoxItem>
            </ComboBox>
            <ComboBox x:Name="cmbDisplays" Width="200" Margin="6,0,6,0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Fill="{Binding Color}" Width="16" Height="16" Margin="0,2,5,2" />
                            <TextBlock Text="{Binding Name}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Margin="10,0" Click="Apply_Click">Apply</Button>
        </StackPanel>
        <Border Grid.Row="1" Grid.Column="0" BorderThickness="3" BorderBrush="Navy">
            <local:AppChooserUserControl x:Name="app0x0"/>
        </Border>
        <Border Grid.Row="1" Grid.Column="1" BorderThickness="0,3,3,3" BorderBrush="Navy">
            <local:AppChooserUserControl x:Name="app0x1"/>
        </Border>
        <Border Grid.Row="2" Grid.Column="0" BorderThickness="3,0,3,3" BorderBrush="Navy">
            <local:AppChooserUserControl x:Name="app1x0"/>
        </Border>
        <Border Grid.Row="2" Grid.Column="1" BorderThickness="0,0,3,3" BorderBrush="Navy">
            <local:AppChooserUserControl x:Name="app1x1"/>
        </Border>
    </Grid>
</Window>
