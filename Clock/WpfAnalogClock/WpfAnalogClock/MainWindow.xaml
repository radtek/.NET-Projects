<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAnalogClock"
        xmlns:Constrols="clr-namespace:WpfAnalogClock.Constrols" x:Class="WpfAnalogClock.MainWindow"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        Icon="Clock.ico"
        MouseWheel="MainWindow_OnMouseWheel"
        Title="WPF Clock" 
        Height="350" Width="350"> 
    <Grid Background="Transparent" MouseDown="ClockGrid_OnMouseDown">
        <Constrols:AnalogClock Grid.Row="0" Grid.Column="0" x:Name="clock" 
                               HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        
        <Button Content="C" x:Name="btnOptions" Margin="40,0"
                VerticalAlignment="Top" HorizontalAlignment="Right" 
                Width="32" Height="32" FontSize="20"
                Background="HotPink" Click="Options_Click"/>
        <Button Content="X" x:Name="btnClose"
                VerticalAlignment="Top" HorizontalAlignment="Right" 
                Width="32" Height="32" FontSize="20"
                Background="HotPink" Click="Close_Click"/>
    </Grid>
</Window>
