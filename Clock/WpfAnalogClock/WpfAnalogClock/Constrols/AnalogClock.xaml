<UserControl x:Class="WpfAnalogClock.Constrols.AnalogClock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAnalogClock.Constrols"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Image Source="/Images/StoneRoundClock1.jpg" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Image Grid.Row="0" Grid.Column="0" Source="/Images/MinuteHand1.png" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image.RenderTransform>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
            </Image.RenderTransform>
            <Image.LayoutTransform>
                <TransformGroup>
                    <RotateTransform x:Name="rotateMinute" Angle="10" CenterX="10" CenterY="300" />
                </TransformGroup>
            </Image.LayoutTransform>
        </Image>
    </Grid>
</UserControl>
